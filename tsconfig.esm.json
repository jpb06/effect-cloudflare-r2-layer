{
	"extends": "./tsconfig",
	"compilerOptions": {
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/esm",
		"declarationDir": "dist/dts/esm",
		"noEmit": false,
		"declaration": true,
		"sourceMap": true
	},
	"exclude": ["./src/tests/**/*", "./src/**/*.test.ts", "./src/temp"]
}
